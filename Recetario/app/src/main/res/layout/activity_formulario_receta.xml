<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_anchorGravity="center"
    tools:context=".FormularioReceta">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etNombreReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre de la receta"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etDescripcionReceta"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Descripción"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Categoría"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnrCategoria"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ingredientes"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnAgregarIngrediente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar ingrediente" />

        <ListView
            android:id="@+id/lvIngredientesFormulario"
            android:layout_width="match_parent"
            android:layout_height="178dp" />

        <Button
            android:id="@+id/btnEliminarIngrediente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Ingrediente" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. de personas"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etPersonas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="¿Para cuántas personas es la receta?"
            android:inputType="number"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <Button
            android:id="@+id/btnRegistrarReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar receta" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>